<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nhung.bmicalculator.InfoPage">

    <TextView
        android:text="Weight Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView32"
        android:layout_marginStart="200dp"
        android:layout_marginTop="150dp"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:text="25.0 - 29.9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="18sp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:id="@+id/textView17"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:text="Below  18.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="18sp"
        android:layout_below="@+id/textView13"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginTop="37dp"
        android:id="@+id/textView14"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:text="BMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="100dp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="30dp"
        android:textSize="18sp"
        android:id="@+id/textView13"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:text="Your BMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="bmiBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bmiBox"
        android:textSize="36sp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="30.0 and above"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="18sp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/textView17"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:text="18.5 - 24.9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="18sp"
        android:layout_marginTop="34dp"
        android:id="@+id/textView15"
        android:layout_below="@+id/textView14"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:text="Under Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView27"
        android:textSize="18sp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="209dp"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:text="Healthy weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView28"
        android:textSize="18sp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="266dp"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:text="Overweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView30"
        android:textSize="18sp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="323dp"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:text="Obese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView31"
        android:textSize="18sp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="388dp"
        android:textColor="@android:color/holo_red_dark" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_help"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/webButton"
        android:layout_alignRight="@+id/textView13"
        android:layout_alignEnd="@+id/textView13" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:id="@+id/backButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView28"
        android:layout_alignEnd="@+id/textView28"
        android:layout_alignTop="@+id/webButton" />

</RelativeLayout>
