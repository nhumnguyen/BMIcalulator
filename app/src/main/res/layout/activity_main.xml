<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nhung.bmicalculator.MainActivity">

    <Button
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calBut"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ansBox"
        android:hint="0"
        android:textAlignment="center"
        android:textEditSidePasteWindowLayout="?android:attr/colorPressedHighlight"
        android:background="?android:attr/colorPressedHighlight"
        android:textSize="36sp"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/calBut"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="BMI Calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/calBut"
        android:layout_alignEnd="@+id/calBut"
        android:layout_marginTop="32dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weightBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </RadioGroup>


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/heightBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </RadioGroup>

    <RadioButton
        android:text="lbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbsBox"
        android:layout_alignBaseline="@+id/weightBox"
        android:layout_alignBottom="@+id/weightBox"
        android:layout_toRightOf="@+id/weightBox"
        android:layout_toEndOf="@+id/weightBox" />

    <RadioButton
    android:text="kg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/kgBox"
        android:layout_alignBaseline="@+id/lbsBox"
        android:layout_alignBottom="@+id/lbsBox"
        android:layout_toRightOf="@+id/lbsBox"
        android:layout_toEndOf="@+id/lbsBox"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <RadioButton
        android:text="cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cmBox"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/lbsBox"
        android:layout_alignEnd="@+id/lbsBox" />

    <RadioButton
    android:text="ft"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ftBox"
        android:layout_alignBaseline="@+id/cmBox"
        android:layout_alignBottom="@+id/cmBox"
        android:layout_alignLeft="@+id/kgBox"
        android:layout_alignStart="@+id/kgBox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/weightBox"
        android:textAlignment="center"
        android:hint="(Weight)"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/heightBox"
        android:hint="(Height)"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/cmBox"
        android:layout_alignBottom="@+id/cmBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
